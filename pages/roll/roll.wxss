/* pages/roll/roll.wxss */
.bg2 {
  z-index: -1;
  width: 100%;
  height: 100%;
}

.content {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.tuAndYue {
  height: 480rpx;
  display: flex;
  justify-content: center;
  margin-top: 23rpx;
  margin-bottom: 10rpx;
  /* background: #feefaa; */
}

.tuAndYue image{
  width: 470rpx;
  height: 450rpx;
  z-index: 10;
}

.roll {
  display: flex;
  justify-content: center;
}

.roll button {
  background: #fbdf7b !important;
  color: #2b2b2b;
}

.award_history {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
}

.award {
  width: 660rpx;
  height: 510rpx;
  background: #105f94;
  opacity: 0.8;
  border-radius: 16rpx;
  padding: 30rpx 30rpx 50rpx 30rpx;
}

.history {
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  height: 55rpx;
}

.award_scroll {
  height: 455rpx;
}

.history_text {
  height: 55rpx;
  text-align: center;
  color: #fff;
  display: flex;
  font-size: 35rpx;
}

.text1 {
  width: 30%;
}

.text2 {
  width: 40%;
}

.text3 {
  width: 30%;
}
