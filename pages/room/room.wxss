/* pages/room/room.wxss */
.bg2 {
  width: 100%;
  height: 100%;
  z-index: -1;
}

.roomNumber {
  text-align: center;
  margin-bottom: 80rpx;
  margin-top: 170rpx;
  color: #feefaa;
  font-size: 46rpx;
  font-weight: 700;
}

.content {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.avatar {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  flex-wrap: wrap;
  margin-bottom: 100rpx;
  padding: 0 70rpx;
}
 
.avatar-item {
  height: 110rpx;
  width: 110rpx;
  border-radius: 50%;
  margin: 18rpx;
}

.button {
  display: flex;
  justify-content: center;
  padding: 0 50rpx;
}

.button .btn {
  width: 240rpx !important;
  background: #feefaa !important;
  color: #464545;
}

.button .download {
  margin-top: 25rpx;
  width: 300rpx !important;
  background: #feefaa !important;
  color: #464545;
}

